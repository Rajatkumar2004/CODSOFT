import cv2
import numpy as np
import face_recognition

def locate_faces(image_file):
    image = cv2.imread(image_file)
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    face_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_frontalface_default.xml')
    faces = face_cascade.detectMultiScale(gray, 1.1, 5, minSize=(30, 30))
    for (x, y, w, h) in faces:
        cv2.rectangle(image, (x, y), (x + w, y + h), (255, 0, 0), 2)
    cv2.imshow('Detected Faces', image)
    cv2.waitKey(0)
    cv2.destroyAllWindows()

def identify_faces(ref_image_file, test_image_file):
    ref_image = face_recognition.load_image_file(ref_image_file)
    test_image = face_recognition.load_image_file(test_image_file)
    ref_encoding = face_recognition.face_encodings(ref_image)
    test_encoding = face_recognition.face_encodings(test_image)
    if not ref_encoding or not test_encoding:
        print("Error: No face detected.")
        return
    result = face_recognition.compare_faces([ref_encoding[0]], test_encoding[0])
    print("Face matched!" if result[0] else "No match found.")

